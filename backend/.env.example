# Enviducate Backend Environment Variables
# Copy this file to .env and fill in your actual API keys

# Google Gemini API Key
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Google Custom Search API (for recent environmental data)
# Get your API key from: https://developers.google.com/custom-search/v1/introduction
GOOGLE_SEARCH_API_KEY=your-google-search-api-key-here
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id-here

# Google Earth Engine (for satellite data analysis)
# Note: GEE requires authentication through service account or OAuth
# See: https://developers.google.com/earth-engine/guides/service_account
GEE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GEE_PRIVATE_KEY_PATH=path/to/your/private-key.json

# Optional: Database URL (currently using SQLite)
DATABASE_URL=sqlite:///./enviducate.db

# Optional: CORS origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Optional: API settings
MAX_QUERY_LENGTH=1000
MIN_QUERY_LENGTH=1
